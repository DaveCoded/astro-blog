---
import '@fontsource/inconsolata';
import '@fontsource/eb-garamond/variable.css';
import '@fontsource/eb-garamond/variable-italic.css';
import '@fontsource/jost/variable.css';
import '@fontsource/jost/variable-italic.css';
import '../global-styles.css';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <div class="grid-container">
            <nav>
                <a href="/">Blog</a>
                <a href="/projects">Projects</a>
            </nav>
            <slot />
            <footer>
                <p>
                    &copy; {new Date().getFullYear()} Dave Bernhard
                </p>
            </footer>
        </div>
    </body>
</html>

<style>
    .grid-container {
        display: grid;
        grid-template-rows: auto 1fr auto;
        min-height: 100vh;
    }

    nav {
        display: flex;
        justify-content: flex-end;
        font-family: 'Jost', sans-serif;
        font-size: var(--step--1);
        padding: var(--space-m) var(--space-s);
    }

    nav a {
        color: var(--color-black);
        text-decoration: none;
    }

    nav a:hover {
        text-decoration: underline;
        color: var(--color-link-hover);
    }

    nav a + a {
        margin-left: var(--space-xs);
    }

    footer {
        font-family: 'Jost', sans-serif;
        font-size: var(--step--2);
        margin-top: var(--space-2xl);
        padding: var(--space-l);
        text-align: center;
    }
</style>
